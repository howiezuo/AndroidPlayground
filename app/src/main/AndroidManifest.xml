<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.howiezuo.androidplayground">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.TopActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".androidasynchttp.AndroidAsyncHttpActivity" />

        <activity android:name=".retrofit.RetrofitActivity" />

        <activity android:name=".okhttp.OkHttpActivity" />

        <activity android:name=".ui.FontAwesomeActivity" />

        <activity android:name=".ui.SurfaceDrawActivity" />

        <activity android:name=".ui.DrawActivity" />

        <activity android:name=".ui.CameraActivity" />

        <activity android:name=".picasso.PicassoActivity" />

        <activity android:name=".eventbus.EventBusActivity" />

        <activity android:name=".fresco.FrescoActivity" />

        <activity android:name=".glide.GlideActivity" />

        <activity android:name=".otto.OttoActivity" />

        <activity android:name=".ui.TransitionActivity" />

        <activity android:name=".ui.TransitionDetailActivity" />

        <activity android:name=".ui.TestActivity" />
    </application>

</manifest>
